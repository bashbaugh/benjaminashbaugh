#!/usr/bin/env ruby

require 'date'

POSTS_DIR = '_posts/'

post = ARGV[0]

File.open(POSTS_DIR + Date.today.strftime("%Y-%m-%d-") + post + '.md', 'w') {|f| f.write(
  "---\nlayout: post\nsection-type: post\n\n#updated: \n\ntitle: \"Title\"\nimage: \"path/to/image\"\nslug: \"a-blog-post\"\ncategory: \"category\"\ntags: [ 'tag1', 'tag2' ]\n\ntitletag: <meta> title tag\ndescription: <meta> description\nkeywords: \meta keywords\"keyword1, keyword2\"\n---")
}

puts('[+] Created ' + post + ' post')
